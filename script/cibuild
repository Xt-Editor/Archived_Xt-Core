#!/bin/sh -eu

source "${PWD}/script/utils.sh"

export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"

# Run the `check` Makefile target
echo -e "${GREEN}INFO:${RESET} Building project.."
cargo build --verbose

echo -e "${GREEN}INFO:${RESET} Testing project.."
cargo test --verbose

exit
