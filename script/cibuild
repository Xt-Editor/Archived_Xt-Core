#!/bin/bash

set -eu

export WORK_DIR="${TRAVIS_BUILD_DIR}/rust"
export PATH="$HOME/.cargo/bin:$PATH"

export CLIPPY=false
if [[ "${TRAVIS_RUST_VERSION}" == "nightly" ]]; then
    cargo install --force clippy && CLIPPY=true
fi

cd "${WORK_DIR"}

if [[ "${TRAVIS_RUST_VERSION}" == "nightly" && \
          "${CLIPPY}" ]]; then \
    cargo clippy
fi

make ci-check

exit
