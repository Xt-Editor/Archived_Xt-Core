#!/bin/bash

export WORK_DIR="${TRAVIS_BUILD_DIR}/rust"

if [[ "${TRAVIS_RUST_VERSION}" == "nightly" ]]; then
    ( (
        cargo install clippy \
            && \
            export CLIPPY=true ) \
          || export CLIPPY=false \
    )
fi

set -eu

export PATH="$HOME/.cargo/bin:$PATH"

if [[ "${TRAVIS_RUST_VERSION}" == "nightly" && \
          "${CLIPPY}" ]]; then \
    cargo clippy
fi

cd "${WORK_DIR}" 

make ci-check

exit
