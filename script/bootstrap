[B#!/bin/bash

if [ -z "${WORKSPACE}" ]; then
    export WORK_DIR="${TRAVIS_BUILD_DIR}/rust"
else
    echo "Unknown workspace."
    exit 1
fi

if [[ "${TRAVIS_RUST_VERSION}" == "nightly" ]]; then
    ( (
        cargo install clippy \
            && \
            export CLIPPY=true ) \
          || export CLIPPY=false \
    )
fi

set -eu

git submodule update --init --recursive

exit
